# i3 config file (v4)
#
#       Ferit Yigit BALABAN <f@fybx.dev>, 2022
#
set 			    $mod Mod4
floating_modifier 	$mod

# Autostart 
exec --no-startup-id picom -b
exec --no-startup-id nitrogen --restore
exec --no-startup-id ~/scripts/launch_polybar
exec --no-startup-id ~/scripts/comingback.sh
exec --no-startup-id ~/scripts/keyboard

font pango:jetbrainsmono-regular 8

# Volume - Media - Keyboard & Screen Brightness
bindsym XF86AudioRaiseVolume 	exec --no-startup-id sh ~/scripts/volumeup.sh
bindsym XF86AudioLowerVolume 	exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% 
bindsym XF86AudioMicMute 		exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle 

bindsym $mod+u          exec --no-startup-id brightnessctl set +10% 
bindsym $mod+j          exec --no-startup-id brightnessctl set 10%-
bindsym $mod+Shift+u    exec --no-startup-id brightnessctl --device=asus::kbd_backlight set +33%
bindsym $mod+Shift+j           exec --no-startup-id brightnessctl --device=asus::kbd_backlight set 33%-

bindsym XF86AudioPlay 	exec --no-startup-id playerctl play-pause
bindsym XF86AudioStop 	exec --no-startup-id playerctl stop
bindsym XF86AudioNext 	exec --no-startup-id playerctl next
bindsym XF86AudioPrev 	exec --no-startup-id playerctl previous

bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Start applications
bindsym $mod+d 		exec --no-startup-id rofi -modi "drun" -show drun
bindsym $mod+c 		exec --no-startup-id chromium
bindsym $mod+Return exec --no-startup-id kitty
bindsym $mod+x	    exec --no-startup-id flameshot gui
bindsym $mod+s      exec --no-startuo-id thunar
bindsym $mod+z      exec --no-startup-id obsidian

# change focused cont. using arrow keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused cont. using arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+f fullscreen toggle
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

set $mode_system System (l) lock, (e) logout, (r) reboot, (s) shutdown, (b) back
mode "$mode_system" {
    bindsym l exec --no-startup-id sh ~/scripts/goingaway.sh, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id sh ~/scripts/reboot.sh, mode "default"
    bindsym s exec --no-startup-id sh ~/scripts/shutdown.sh, mode "default"
    bindsym b exec --no-startup-id sh ~/scripts/comingback.sh, mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+BackSpace mode "$mode_system"

# class                 border  backgr. text    indicator child_border
client.focused          #FF93D5 #FF93A0 #282A2E #FF93A0   #FF93D5
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff

for_window [class=".*"] border pixel 0
smart_borders on
gaps inner 10
